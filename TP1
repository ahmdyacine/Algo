#include<stdio.h>
#include<stdlib.h>
int main(){
char T[5][5]={{'1','2','3','4','5'},
              {'7','a','c','8','d'},
              {'c','9','4','z','8'},
              {'5','6','p','n','3'},
              {'2','9','t','m','k'}};
int i,j,x,t;

//affichage de la Matrix


for ( i = 0; i < 5; i++){

  for ( j = 0; j < 5; i++){

    printf("%c\t",T[i][j]);
}
printf("\n");   
}printf("\n");
printf("\n");
printf("\n");

// les ligne paire


for ( i = 0; i < 5; i+=2){
   for ( j = 0; j < 5; j++){

       printf("%c\t",T[i][j]);
     }
   printf("\n");
}
printf("\n");
printf("\n");
printf("\n");
printf("\n");


//les ligne impaire



 for ( i = 1; i < 5; i+=2){
   for ( j = 0; j < 5; j++){
   
    printf("%c\t",T[i][j]);
    
    }
    printf("\n");
}
printf("\n");
printf("\n");
printf("\n");

//1er diagonale


for ( i = 0; i < 5; i++){

    printf("%c\n\t",T[i][i]);

}
printf("\n");
printf("\n");
printf("\n");
j=0;
for ( i = 4; i >= 0; i--){
   
    printf("%c\n\t",T[i][j]);
  j++;
}
printf("\n");
printf("\n");
printf("\n");
printf("\n");
x = 1;
for ( i = 0; i < 5; i++)
{for ( j = x; j < 5; j++)
{
    if ( i != j )
    {
        t = T[i][j];
        T[i][j] = T[j][i];
        T[j][i] = T[i][j];
    }
    x++;
}
    
}
return 0;
}
