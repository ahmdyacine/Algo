#include <stdio.h>
#include <unistd.h>
#include <sys/wait.h>

int main() {
    for(int i = 0; i < 3; i++) {
        pid_t p = fork();
        if(p == 0) {
            printf("Fils PID=%d, Parent=%d\n", getpid(), getppid());
            return 0;
        }
    }

    for(int i = 0; i < 3; i++)
        wait(NULL);

    printf("Parent PID=%d terminé\n", getpid());
    return 0;
}
ex3 
#include <stdio.h>
#include <unistd.h>
#include <sys/wait.h>

int main() {
    pid_t p = fork();
    if(p == 0) {
        return 0;
    } else {
        sleep(10);
        int status;
        waitpid(p, &status, 0);
    }
    return 0;
}


ex 2
#include <stdio.h>
#include <unistd.h>
#include <sys/wait.h>

int main() {
    pid_t p = fork();
    if(p < 0) {
        printf("Erreur: fork a échoué\n");
        return 1;
    }
    if(p == 0)
        return 0;

    wait(NULL);
    return 0;
}