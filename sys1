#include <stdio.h>
#include <unistd.h>
#include <sys/wait.h>

int main() {
    for(int i = 0; i < 3; i++) {
        pid_t p = fork();
        if(p == 0) {
            printf("Fils PID=%d, Parent=%d\n", getpid(), getppid());
            return 0;
        }
    }

    for(int i = 0; i < 3; i++)
        wait(NULL);

    printf("Parent PID=%d terminÃ©\n", getpid());
    return 0;
}