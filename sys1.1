#include <stdio.h>
#include <pthread.h>

void* f(void *arg) {
    printf("Thread ID=%lu en exécution\n", pthread_self());
    return NULL;
}

int main() {
    pthread_t t[5];

    for(int i = 0; i < 5; i++)
        pthread_create(&t[i], NULL, f, NULL);

    for(int i = 0; i < 5; i++)
        pthread_join(t[i], NULL);

    return 0;
}
